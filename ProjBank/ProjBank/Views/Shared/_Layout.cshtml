<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/nav_style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/font-awesome.min.css" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("Parents Bank", "Index", "Home", new { Class = "navbar-brand" }) 
                
               
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                    <li><a href="/Home/"><i class="fa fa-home"></i></a> </li>
                    <li>@Html.ActionLink("Financial Resources", "financial-resources", "Help")</li>
                    <li>@Html.ActionLink("Accounts", "/", "Accounts")</li>
                    <li>@Html.ActionLink("Wishlists", "/", "WishLists")</li>
                    <li>@Html.ActionLink("Transactions", "/", "Transactions")</li>

 <!--
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Accounts", "/", "Accounts")</li>
                        <li>@Html.ActionLink("Wishlists", "/", "WishLists")</li>
                        <li>@Html.ActionLink("Transactions", "/", "Transactions")</li>

                    }
                    -->
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/home_carosel.js"></script>


    @RenderSection("scripts", required: false)
</body>
</html>
